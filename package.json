{
	"name": "coboler",
	"displayName": "coboler",
	"description": "Extension to compile and run cobol programs",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.93.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:cobol"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "cobol.compile",
				"title": "Compile COBOL",
				"icon": "$(gear)"
			},
			{
				"command": "cobol.run",
				"title": "Run COBOL",
				"icon": "$(play)"
			},
			{
				"command": "cobol.compileAndRun",
				"title": "Compile & Run",
				"icon": "$(play-circle)"
			}
		],
		"menus": {
			"editor/title": [
				{
					"when": "resourceLangId == COBOL",
					"command": "cobol.compile",
					"group": "navigation"
				},
				{
					"when": "resourceLangId == COBOL",
					"command": "cobol.run",
					"group": "navigation"
				},
				{
					"when": "resourceLangId == COBOL",
					"command": "cobol.compileAndRun",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/vscode": "^1.93.0",
		"@types/mocha": "^10.0.7",
		"@types/node": "20.x",
		"eslint": "^9.9.1",
		"@vscode/test-cli": "^0.0.10",
		"@vscode/test-electron": "^2.4.1"
	}
}
